<section>
    <div class="container">
        <div class="row mt-5 mb-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-3">Add product</a>
        </div>
        <table class="table table-striped mt-5" id="productsTable">
            <thead class="thead-dark">
                <tr>
                    
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td style="width: 23rem;">{{this.Description}}</td>
                    <td>{{this.Price}}</td>
                    <td><img src="images/product-images/{{this._id}}.jpg" alt="" style="width: 50px; height: 50px; border-radius: 50%;"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
                    </td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(function () {
    $('#productsTable').DataTable();
} );
</script>